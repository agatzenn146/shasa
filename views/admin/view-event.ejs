<%- include('../partials/admin-header') %>

<div class="container mt-5 w-50">
    <h2>Event Details</h2>
    <%- include('../partials/messages') -%>

    <div class="mb-3">
        <label>Event Name</label>
        <input type="text" class="form-control" value="<%= event.name %>" readonly>
    </div>

    <div class="mb-3">
        <label>Event Date</label>
        <input type="text" class="form-control" value="<%= event.evdate %>" readonly>
    </div>

    <div class="mb-3">
        <label>Time</label>
        <input type="text" class="form-control" value="<%= event.time %>" readonly>
    </div>

    <div class="mb-3">
        <label>Image</label>
        <input type="text" class="form-control" value="<%= event.image %>" readonly>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea class="form-control" rows="5" readonly><%= event.description %></textarea>
    </div>

    <a href="/admin/edit-event/<%= event._id %>" class="btn btn-warning">Edit</a>
    <form action="/admin/delete-event/<%= event._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<%- include('../partials/admin-footer') %>
