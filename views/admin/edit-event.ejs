<%- include('../partials/admin-header') %>
<%- include('../partials/admin-sidebar') %>

<div class="container mt-5 w-50">
    <h2>Edit Event</h2>
    <%- include('../partials/messages') -%>
    <input type="hidden" name="currentImage" value="<%= event.image %>">


    <form action="/admin/edit-event/<%= event._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
   

        <div class="mb-3">
            <label>Event Name</label>
            <input type="text" name="name" class="form-control" value="<%= event.name %>" required>
        </div>

        <div class="mb-3">
            <label>Event Date</label>
            <input type="date" name="evdate" class="form-control" value="<%= event.evdate %>" required>
        </div>

        <div class="mb-3">
            <label>Time</label>
            <input type="time" name="time" class="form-control" value="<%= event.time %>" required>
        </div>

        <div class="mb-3">
            <label>Current Image</label>
            <input type="text" class="form-control" value="<%= event.image %>" readonly>
        </div>

        <div class="mb-3">
            <label>Change Image</label>
            <input type="file" name="image" class="form-control" accept="image/*">
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea name="description" class="form-control" rows="5" required><%= event.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Event</button>
    </form>
</div>

<%- include('../partials/admin-footer') %>
